<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.week.WeekFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_height"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/week_leftButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_left_off" />

            <TextView
                android:id="@+id/week_dateTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="yyyy / MM (n)" />

            <ImageView
                android:id="@+id/week_rightButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_right_off" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/week_sunday_addLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:foreground="?android:attr/selectableItemBackground">
                    <TextView
                        android:id="@+id/week_sunday_date_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="?attr/colorControlNormal"
                        android:layout_margin="@dimen/item_box_week_margin"
                        android:textSize="@dimen/item_box_week_text_size"/>

                    <TextView
                        android:id="@+id/week_sunday_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sunday"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/item_box_week_margin"
                        android:background="@drawable/week_day_title_box"
                        android:textSize="@dimen/item_box_week_text_size"/>
                </LinearLayout>

                <ListView
                    android:id="@+id/week_sunday_listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/transparent"
                    android:dividerHeight="@dimen/item_day_divider_height"
                    android:background="@drawable/week_listview_box"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/week_monday_addLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:foreground="?android:attr/selectableItemBackground">
                    <TextView
                        android:id="@+id/week_monday_date_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="?attr/colorControlNormal"
                        android:layout_margin="@dimen/item_box_week_margin"
                        android:textSize="@dimen/item_box_week_text_size"/>

                    <TextView
                        android:id="@+id/week_monday_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/monday"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/item_box_week_margin"
                        android:background="@drawable/week_day_title_box"
                        android:textSize="@dimen/item_box_week_text_size"/>
                </LinearLayout>

                <ListView
                    android:id="@+id/week_monday_listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/transparent"
                    android:dividerHeight="@dimen/item_day_divider_height"
                    android:background="@drawable/week_listview_box"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/week_tuesday_addLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:foreground="?android:attr/selectableItemBackground">
                    <TextView
                        android:id="@+id/week_tuesday_date_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="?attr/colorControlNormal"
                        android:layout_margin="@dimen/item_box_week_margin"
                        android:textSize="@dimen/item_box_week_text_size"/>

                    <TextView
                        android:id="@+id/week_tuesday_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tuesday"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/item_box_week_margin"
                        android:background="@drawable/week_day_title_box"
                        android:textSize="@dimen/item_box_week_text_size"/>
                </LinearLayout>

                <ListView
                    android:id="@+id/week_tuesday_listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/transparent"
                    android:dividerHeight="@dimen/item_day_divider_height"
                    android:background="@drawable/week_listview_box"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/week_wednesday_addLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:foreground="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/week_wednesday_date_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="?attr/colorControlNormal"
                        android:layout_margin="@dimen/item_box_week_margin"
                        android:textSize="@dimen/item_box_week_text_size"/>

                    <TextView
                        android:id="@+id/week_wednesday_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/wednesday"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/item_box_week_margin"
                        android:background="@drawable/week_day_title_box"
                        android:textSize="@dimen/item_box_week_text_size"/>
                </LinearLayout>

                <ListView
                    android:id="@+id/week_wednesday_listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/transparent"
                    android:dividerHeight="@dimen/item_day_divider_height"
                    android:background="@drawable/week_listview_box"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/week_thursday_addLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:foreground="?android:attr/selectableItemBackground">
                    <TextView
                        android:id="@+id/week_thursday_date_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="?attr/colorControlNormal"
                        android:layout_margin="@dimen/item_box_week_margin"
                        android:textSize="@dimen/item_box_week_text_size"/>

                    <TextView
                        android:id="@+id/week_thursday_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/thursday"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/item_box_week_margin"
                        android:background="@drawable/week_day_title_box"
                        android:textSize="@dimen/item_box_week_text_size"/>
                </LinearLayout>

                <ListView
                    android:id="@+id/week_thursday_listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/transparent"
                    android:dividerHeight="@dimen/item_day_divider_height"
                    android:background="@drawable/week_listview_box"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/week_friday_addLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:foreground="?android:attr/selectableItemBackground">
                    <TextView
                        android:id="@+id/week_friday_date_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="?attr/colorControlNormal"
                        android:layout_margin="@dimen/item_box_week_margin"
                        android:textSize="@dimen/item_box_week_text_size"/>

                    <TextView
                        android:id="@+id/week_friday_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/friday"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/item_box_week_margin"
                        android:background="@drawable/week_day_title_box"
                        android:textSize="@dimen/item_box_week_text_size"/>

                </LinearLayout>

                <ListView
                    android:id="@+id/week_friday_listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/transparent"
                    android:dividerHeight="@dimen/item_day_divider_height"
                    android:background="@drawable/week_listview_box"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/week_saturday_addLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:foreground="?android:attr/selectableItemBackground">
                    <TextView
                        android:id="@+id/week_saturday_date_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="?attr/colorControlNormal"
                        android:layout_margin="@dimen/item_box_week_margin"
                        android:textSize="@dimen/item_box_week_text_size"/>

                    <TextView
                        android:id="@+id/week_saturday_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/saturday"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/item_box_week_margin"
                        android:background="@drawable/week_day_title_box"
                        android:textSize="@dimen/item_box_week_text_size"/>
                </LinearLayout>

                <ListView
                    android:id="@+id/week_saturday_listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/transparent"
                    android:dividerHeight="@dimen/item_day_divider_height"
                    android:background="@drawable/week_listview_box"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/week_backButton"
            android:layout_width="@dimen/fab_size"
            android:layout_height="@dimen/fab_size"
            android:layout_margin="@dimen/fab_margin"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back_today_off" />
    </LinearLayout>
</FrameLayout>