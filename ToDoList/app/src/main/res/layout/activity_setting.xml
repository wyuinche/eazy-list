<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/layout_margin"
    android:background="?attr/colorSurface"
    tools:context=".SettingActivity">

    <TextView
        android:id="@+id/setting_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_padding_big"
        android:layout_margin="@dimen/layout_margin"
        android:gravity="center"
        android:textColor="?attr/colorControlNormal"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_large"
        android:text="@string/activity_title_set" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/text_size_big"
        android:textColor="?attr/colorControlNormal"
        android:layout_marginHorizontal="@dimen/text_margin_medium"
        android:padding="@dimen/text_padding_large"
        android:text="@string/set_theme" />

    <RadioGroup
        android:id="@+id/setting_theme_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/text_margin_medium"
        android:padding="@dimen/text_padding_large"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:textColor="?attr/colorControlNormal"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorControlNormal"
            android:textSize="@dimen/text_size_medium"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorControlNormal"
            android:textSize="@dimen/text_size_medium"
            android:text="RadioButton" />
    </RadioGroup>
</LinearLayout>