<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.month.MonthFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_height"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/month_leftButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_left_off" />

            <TextView
                android:id="@+id/month_dateTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="yyyy / MM" />

            <ImageView
                android:id="@+id/month_rightButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_right_off" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_box_month_padding">

            <TextView
                android:id="@+id/month_sunday_textView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_box_week_margin"
                android:background="@drawable/week_day_title_box"
                android:gravity="center"
                android:text="@string/sunday"
                android:textSize="@dimen/item_box_week_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/month_monday_textView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_box_week_margin"
                android:background="@drawable/week_day_title_box"
                android:gravity="center"
                android:text="@string/monday"
                android:textSize="@dimen/item_box_week_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/month_tuesday_textView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_box_week_margin"
                android:background="@drawable/week_day_title_box"
                android:gravity="center"
                android:text="@string/tuesday"
                android:textSize="@dimen/item_box_week_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/month_wednesday_textView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_box_week_margin"
                android:background="@drawable/week_day_title_box"
                android:gravity="center"
                android:text="@string/wednesday"
                android:textSize="@dimen/item_box_week_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/month_thursday_textView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_box_week_margin"
                android:background="@drawable/week_day_title_box"
                android:gravity="center"
                android:text="@string/thursday"
                android:textSize="@dimen/item_box_week_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/month_friday_textView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_box_week_margin"
                android:background="@drawable/week_day_title_box"
                android:gravity="center"
                android:text="@string/friday"
                android:textSize="@dimen/item_box_week_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/month_saturday_textView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_box_week_margin"
                android:background="@drawable/week_day_title_box"
                android:gravity="center"
                android:text="@string/saturday"
                android:textSize="@dimen/item_box_week_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:background="@drawable/month_view"
            android:padding="@dimen/item_box_month_padding"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/month_sunday_listView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_box_month_margin"
                android:divider="@color/transparent"
                android:dividerHeight="@dimen/item_day_divider_height" />

            <ListView
                android:id="@+id/month_monday_listView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_box_month_margin"
                android:divider="@color/transparent"
                android:dividerHeight="@dimen/item_day_divider_height" />

            <ListView
                android:id="@+id/month_tuesday_listView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_box_month_margin"
                android:divider="@color/transparent"
                android:dividerHeight="@dimen/item_day_divider_height" />

            <ListView
                android:id="@+id/month_wednesday_listView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_box_month_margin"
                android:divider="@color/transparent"
                android:dividerHeight="@dimen/item_day_divider_height" />

            <ListView
                android:id="@+id/month_thursday_listView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_box_month_margin"
                android:divider="@color/transparent"
                android:dividerHeight="@dimen/item_day_divider_height" />

            <ListView
                android:id="@+id/month_friday_listView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_box_month_margin"
                android:divider="@color/transparent"
                android:dividerHeight="@dimen/item_day_divider_height" />

            <ListView
                android:id="@+id/month_saturday_listView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_box_month_margin"
                android:divider="@color/transparent"
                android:dividerHeight="@dimen/item_day_divider_height" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/month_backButton"
            android:layout_width="@dimen/fab_size"
            android:layout_height="@dimen/fab_size"
            android:layout_margin="@dimen/fab_margin"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back_today_off" />

        <ImageView
            android:id="@+id/month_addButton"
            android:layout_width="@dimen/fab_size"
            android:layout_height="@dimen/fab_size"
            android:layout_margin="@dimen/fab_margin"
            android:scaleType="centerInside"
            android:src="@drawable/ic_add_off" />
    </LinearLayout>
</FrameLayout>