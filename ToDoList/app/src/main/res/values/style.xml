<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ToDoList.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.ToDoList.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="PurpleTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_300</item>
        <item name="colorOnPrimary">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/purple_700</item>

        <item name="colorSecondary">@color/pink_200</item>
        <item name="colorSecondaryVariant">@color/pink_400</item>

        <item name="tabTextColor">@color/purple_500</item>
        <item name="tabSelectedTextColor">@color/purple_100</item>
        <item name="tabBackground">@color/purple_200</item>
        <item name="tabRippleColor">@color/purple_500</item>

        <item name="colorOnBackground">@color/black</item>
        <item name="colorBackgroundFloating">@color/purple_100_trans</item>

        <item name="colorAccent">@color/red</item>

        <item name="colorSurface">@color/beige</item>
        <item name="colorPrimarySurface">@color/transparent</item>
        <item name="colorOnSurface">@color/purple_100</item>

        <item name="colorControlNormal">@color/gray_500</item>
        <item name="colorControlActivated">@color/gray_700</item>
        <item name="colorControlHighlight">@color/pink_200</item>


        <item name="android:colorControlNormal">@color/purple_200</item>
        <item name="android:colorControlActivated">@color/purple_500</item>
        <item name="android:colorControlHighlight">@color/purple_700</item>
    </style>

